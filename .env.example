# .env.example - Copie este arquivo para .env e configure com seus valores

# Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua-chave-anon-key
SUPABASE_DB_PASSWORD=sua-senha-do-banco

# Postgres (Supabase)
PGURL=postgresql://postgres.seu-projeto:senha@aws-0-sa-east-1.pooler.supabase.com:6543/postgres?sslmode=require

# === Chaves de IA (opcional) ===
ANTHROPIC_API_KEY=sua-chave-anthropic
OPENAI_API_KEY=sua-chave-openai

# === Configurações de Cache ===
USE_RAM_CACHE=0  

# === Configurações de Autenticação ===
JWT_SECRET_KEY=gere-uma-chave-secreta-aleatoria
FLASK_SECRET_KEY=gere-outra-chave-secreta-aleatoria

# Credenciais de acesso
ADMIN_USER=admin
# Para gerar um novo hash de senha, use:
# python -c "import bcrypt; print(bcrypt.hashpw('sua-senha'.encode('utf-8'), bcrypt.gensalt()).decode('utf-8'))"
ADMIN_PASSWORD_HASH=$2b$12$hash-da-sua-senha

# === MCP Tokens (opcional) ===
GITHUB_TOKEN=seu-token-github
SUPABASE_PAT=seu-token-supabase
SUPABASE_ACCESS_TOKEN=seu-token-supabase